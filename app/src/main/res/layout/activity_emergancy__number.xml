<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emergancy_Number"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number One:"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:background="@color/basicColor"
        android:textColor="#fff"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/ph_no_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:inputType="phone"
        android:text="Number One:"
        android:textSize="24dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number Two:"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:background="@color/basicColor"
        android:textColor="#fff"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/ph_no_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:inputType="phone"
        android:text="Number Two"
        android:textSize="24dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >
    <Button
        android:onClick="editable"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/basicColor"
        android:text="Edit"
        android:textColor="#fff"
        android:layout_weight="1"
        android:layout_margin="20dp"/>
        <Button
            android:onClick="saveNo"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/basicColor"
            android:text="Save"
            android:textColor="@color/white"/>
    </LinearLayout>

    <Button
        android:onClick="makeCall"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/basicColor"
        android:text="Test Call"
        android:textColor="#fff"/>





</LinearLayout>